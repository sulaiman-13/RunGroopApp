@using RunGroopApp.Data

@model IEnumerable<Race>
@{
    ViewData["Title"] = "Club Page";
}


<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var race in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img src="@race.Image" alt="@race.Title - image" height="225" class="card-img-top" width="100%" />
                        <div class="card-body">
                            <p class="card-text">@race.Title</p>
                            <p class="card-text">@race.Description</p>
                            <div class="d-flex justify-content-between aligne-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary"asp-controller="Race"asp-action="Detail"asp-route-id="@race.Id">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
                                    {
                                        <a class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Edit" asp-route-id="@race.Id">Edit</a>
                                        <a class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Delete" asp-route-id="@race.Id">Delete</a>

                                    }

                                </div>
                                <small class="text-muted">@race.RaceCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

