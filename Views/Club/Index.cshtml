@using RunGroopApp.Data

@model IEnumerable<Club>
@{
	ViewData["Title"] = "Club Page";
}


<div class="album py-5 bg-light">
	<div class="container">
		<div class="row">
			@foreach (var club in Model)
			{
				<div class="col-md-4">
					<div class="card mb-4 box-shadow">
						<img src="@club.Image" alt="@club.Title - image" height="225" class="card-img-top" width="100%" />
						<div class="card-body">
							<p class="card-text">@club.Title</p>
							<p class="card-text">@club.Description</p>
							<div class="d-flex justify-content-between aligne-items-center">
								<div class="btn-group">
									<a class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Detail" asp-route-id="@club.Id">View</a>
									@if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
									{
										<a class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Edit" asp-route-id="@club.Id">Edit</a>
										<a class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Delete" asp-route-id="@club.Id">Delete</a>

									}

								</div>
								<small class="text-muted">@club.ClubCategory</small>
							</div>
						</div>
					</div>
				</div>
			}
		</div>

	</div>
</div>

